{
  "name": "secure-mcp-server",
  "version": "1.0.0",
  "port": 3001,
  "security": {
    "authentication": {
      "enabled": true,
      "apiKeys": [
        {
          "key": "REPLACE_WITH_VERY_STRONG_RANDOM_KEY_MIN_32_CHARS",
          "name": "Highly Restricted Key",
          "permissions": ["tools:call"]
        }
      ]
    },
    "rateLimit": {
      "enabled": true,
      "global": {
        "window": 60000,
        "maxRequests": 100
      },
      "perTool": {
        "sensitive-operation": {
          "window": 60000,
          "maxRequests": 5
        }
      }
    },
    "audit": {
      "enabled": true,
      "logFile": "/var/log/mcp/audit-secure.log",
      "logLevel": "info"
    },
    "ipWhitelist": [
      "10.0.0.0/8",
      "192.168.1.0/24"
    ]
  },
  "tools": [
    {
      "name": "secure-operation",
      "description": "A highly secured operation",
      "inputSchema": {
        "type": "object",
        "properties": {
          "action": {
            "type": "string",
            "enum": ["read", "write"],
            "description": "Action to perform"
          },
          "target": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9_-]+$",
            "maxLength": 50,
            "description": "Target identifier"
          }
        },
        "required": ["action", "target"],
        "additionalProperties": false
      },
      "handler": {
        "type": "file",
        "path": "./mcp/handlers/examples/greetHandler.ts"
      }
    }
  ],
  "prompts": [
    {
      "name": "security-policy",
      "description": "Security policy prompt",
      "arguments": [
        {
          "name": "resource",
          "required": true
        }
      ],
      "template": "Review security policy for {{resource}}:\n- Authentication required\n- Rate limiting enforced\n- Audit logging enabled\n- IP restrictions applied"
    }
  ],
  "resources": [
    {
      "uri": "secure://policies",
      "name": "Security Policies",
      "description": "Security policies documentation",
      "mimeType": "application/json",
      "content": {
        "authentication": "required",
        "rateLimit": "enforced",
        "audit": "enabled",
        "encryption": "TLS 1.3",
        "ipWhitelist": "enabled"
      }
    }
  ]
}