{
  "name": "simply-mcp",
  "version": "2.3.0",
  "description": "Model Context Protocol (MCP) server framework with support for multiple transports",
  "private": false,
  "type": "module",
  "main": "./dist/mcp/index.js",
  "module": "./dist/mcp/index.js",
  "types": "./dist/mcp/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/mcp/index.d.ts",
      "import": "./dist/mcp/index.js",
      "default": "./dist/mcp/index.js"
    },
    "./decorators": {
      "types": "./dist/mcp/decorators.d.ts",
      "import": "./dist/mcp/decorators.js",
      "default": "./dist/mcp/decorators.js"
    },
    "./config": {
      "types": "./dist/mcp/config.d.ts",
      "import": "./dist/mcp/config.js",
      "default": "./dist/mcp/config.js"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "simplymcp": "./dist/mcp/cli/index.js",
    "simplymcp-run": "./dist/mcp/cli/run-bin.js",
    "simplymcp-class": "./dist/mcp/cli/class-bin.js",
    "simplymcp-func": "./dist/mcp/cli/func-bin.js",
    "simplymcp-bundle": "./dist/mcp/cli/bundle-bin.js"
  },
  "files": [
    "dist",
    "mcp",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "node_modules/.bin/tsc",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "dev": "npx tsx mcp/examples/simple-server.ts",
    "dev:http": "npx tsx mcp/examples/simple-server.ts --http --port 3000",
    "dev:class": "npx tsx mcp/class-adapter.ts mcp/examples/class-minimal.ts",
    "test": "bash mcp/tests/run-all-tests.sh",
    "test:stdio": "bash mcp/tests/test-stdio.sh",
    "test:http": "bash mcp/tests/test-stateful-http.sh",
    "release:patch": "bash scripts/release.sh patch",
    "release:minor": "bash scripts/release.sh minor",
    "release:major": "bash scripts/release.sh major"
  },
  "author": {
    "name": "Nicholas Marinkovich, MD",
    "url": "https://cwinnov.com"
  },
  "contributors": [
    "SimpleMCP Contributors"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Clockwork-Innovations/simply-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Clockwork-Innovations/simply-mcp/issues"
  },
  "homepage": "https://github.com/Clockwork-Innovations/simply-mcp#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "llm",
    "typescript",
    "server",
    "framework",
    "decorators",
    "claude",
    "anthropic",
    "tools",
    "prompts",
    "resources"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "esbuild": "^0.25.10",
    "express": "^5.1.0",
    "reflect-metadata": "^0.2.2",
    "yargs": "^18.0.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@types/node": "^24",
    "@types/yargs": "^17.0.33",
    "chokidar": "^4.0.3",
    "pkg": "^5.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
